<h1> Create a new Article </h1>
<% if @newArticle.errors.any? %>
    <h2>following errors prevented saving this article</h2>
<ul>
    <% @newArticle.errors.full_messages.each do |msg| %>
       <li> <%= msg %></li>
    <% end %>
</ul>

<% end %>

<%= form_with scope: :articles, url: articles_path, local: true, data: { turbo: false } do |f| %>
    <p>
        <%= f.label :title %></br>
        <%= f.text_field :title %></br>
    </p>

    <p>
        <%= f.label :desc %></br>
        <%= f.text_area :desc %></br>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>


<p>
    <%= link_to "Back", articles_path %>
</p>